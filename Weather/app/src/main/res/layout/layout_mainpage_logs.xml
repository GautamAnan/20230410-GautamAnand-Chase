<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.gautam.domain.model.WeatherModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintWidth_percent="0.2"
            android:id="@+id/ivWeatherImage"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="4dp"
            android:layout_marginVertical="15dp"
            android:scaleType="centerInside"
            app:image_url="@{data.icon}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="@{data.main}"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="@{data.main.empty ? View.GONE :View.VISIBLE}"
            app:layout_constraintTop_toTopOf="@id/ivWeatherImage"
            tools:text="Caew edfefww   weffwf" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@{data.description}"
            android:visibility="@{data.description.empty ? View.GONE :View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHead"
            app:layout_constraintWidth_percent="0.5"
            tools:text="Ba dfew   wefwf fwewfef    ewfe" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>